<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
<%- include('partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<a href="profile-edit.html"><%= usuario.nombre %>
							<i class="fas fa-cog"></i>
						</a>
						<p><%= usuario.email %> </p>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 Productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>

			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto">
							<div class="product-box_image">
								<img src="<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
							</div>
							<article class="product-box_data">
								<h2><%= productos[i].nombre %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>Comentarios:</p>
								<p><%= productos[i].comentarios[0].usuario %>: <%= productos[i].comentarios[0].texto %></p>
								<p><%= productos[i].comentarios[1].usuario %>: <%= productos[i].comentarios[1].texto %></p>
								<p><%= productos[i].comentarios[2].usuario %>: <%= productos[i].comentarios[2].texto %></p>
								<p><%= productos[i].comentarios[3].usuario %>: <%= productos[i].comentarios[3].texto %></p>
								<p><%= productos[i].comentarios[4].usuario %>: <%= productos[i].comentarios[4].texto %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>