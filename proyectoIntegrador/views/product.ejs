<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('partials/head') %>
<body>

	<%- include('partials/header') %>
	


  <div class="titulo-producto">
    <h2><%=productos[0].nombre%></h2>
    <p class="editar">Editar</p>
  </div>


  <div class="contenedor">
    <div class="producto">
      <div class="info-producto">
        <div class="imagen-producto">
          <img src="/img/porsche.jpg" alt="Imagen del producto">
        </div>

        <p class="descripcion">
			<%=productos[0].descripcion%>
        </p>
      </div>
    </div>

    <div class="comentarios">
      <div class="comentario">
        <p><a><%=productos[0].comentarios[0].usuario%>:</a> <%=productos[0].comentarios[0].texto%></p>
      </div>
      <div class="comentario">
        <p><a><%= productos[0].comentarios[1].usuario %>:</a> <%=productos[0].comentarios[1].texto%></p>
      </div>
      <div class="comentario">
        <p><a><%= productos[0].comentarios[2].usuario %>: </a> <%=productos[0].comentarios[2].texto%></p>
      </div>
      <div class="comentario">
        <p><a><%= productos[0].comentarios[3].usuario %>: </a> <%=productos[0].comentarios[3].texto%></p>
      </div>

      <div class="formulario-comentarios">
        <input type="text" placeholder="Agregar comentario">
        <button>AGREGAR COMENTARIO</button>
      </div>
    </div>
  </div>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>