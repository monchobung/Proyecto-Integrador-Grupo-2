<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include('partials/head') %>
<body>

	<%- include('partials/header') %>

	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= productos[0].nombre %></h2> 
			<p class="product-detail-description">
				<a href="/productadd" class="vinculo-editar">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= productos[0].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos[0].descripcion %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i < productos[0].comentarios.length; i++) { %>
							<article>
								<img src="<%= productos[0].comentarios[i].imagenPerfil %>" alt="">
								<div class="data">
									<p class="user">
										<strong>
											<a href="profile.html"><%= productos[0].comentarios[i].usuario %>: </a>
										</strong>
										<%= productos[0].comentarios[i].texto %>
									</p>
								</div>
							</article>
						<% } %>
					</section>
					
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>